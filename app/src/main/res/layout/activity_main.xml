<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.bagicode.www.mylogin.MainActivity">

    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:paddingTop="40dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- 1. field username login-->
        <EditText
            android:hint="Login"
            android:drawablePadding="20dp"
            android:paddingBottom="16dp"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Switch
            android:checked="true"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- 2. field passwird login-->
        <EditText
            android:hint="Password"
            android:layout_marginTop="10dp"
            android:drawablePadding="20dp"
            android:paddingBottom="16dp"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="Forget Password ?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:text="Sign In"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:background="#e67614"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:text="My Account"
        android:id="@+id/judulApps"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_below="@id/judulApps"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_person_outline_black_24dp"
        android:background="@color/colorPrimary"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <!--you can search image guys :p
    bye-->

</RelativeLayout>
